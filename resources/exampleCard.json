{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "backgroundImage": "https://download-ssl.msgamestudios.com/content/mgs/ce/production/SolitaireWin10/dev/adapative_card_assets/v1/card_background.png",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 1,
          "items": [
            {
              "type": "Image",
              "url": "https://download-ssl.msgamestudios.com/content/mgs/ce/production/SolitaireWin10/dev/adapative_card_assets/v1/tile_spider.png",
              "size": "stretch"
            },
            {
              "type": "TextBlock",
              "text": "Monday April 1",
              "weight": "bolder",
              "size": "large",
              "color": "light"
            },
            {
              "type": "TextBlock",
              "text": "63 / 42",
              "size": "medium",
              "spacing": "none"
            },
            {
              "type": "TextBlock",
              "isSubtle": true,
              "text": "20% chance of rain",
              "spacing": "none"
            },
            {
              "type": "TextBlock",
              "isSubtle": true,
              "text": "Winds 5 mph NE",
              "spacing": "none"
            }
          ],
          "selectAction": {
            "type": "Action.OpenUrl",
            "title": "View Friday",
            "url": "http://www.microsoft.com"
          }
        },
        {
          "type": "Column",
          "width": 1,
          "items": [
            {
              "type": "TextBlock",
              "text": "Click here to play another game of Spider in Microsoft Solitaire Collection!",
              "color": "light",
              "weight": "bolder",
              "wrap": true,
              "size": "default",
              "horizontalAlignment": "center"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "More Info",
      "url": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
    }
  ]
}
